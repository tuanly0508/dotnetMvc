@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>
<div>
    <a asp-controller="Category" asp-action="Create">Create new Category</a>
</div>
<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>CategoryName</th>
            <th>DisplayOrder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="50%">@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-route-id="@obj.Id" asp-action="Edit"
                        asp-controller="Category"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a class="btn btn-danger" asp-route-id="@obj.Id" asp-action="Delete" asp-controller="Category"><i
                            class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

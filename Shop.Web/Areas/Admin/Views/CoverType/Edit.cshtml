@model CoverType

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update CoverType</h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text">
